{
  "version": 2,
  "builds": [
    { "src": "api/chat.js", "use": "@vercel/node" },
    { "src": "server.js", "use": "@vercel/node" },
    { "src": "chat.html", "use": "@vercel/static" },
    { "src": "index.html", "use": "@vercel/static" },
    { "src": "chatbot.js", "use": "@vercel/static" },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "headers": [
    {
      "source": "/AI_Audit_Checklist_SantosAutomation.pdf",
      "headers": [
        { "key": "Content-Disposition", "value": "attachment; filename=\"AI_Audit_Checklist_SantosAutomation.pdf\"" },
        { "key": "Content-Type", "value": "application/pdf" }
      ]
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/api/chat", "dest": "/api/chat.js" },
    { "src": "/chatbot.js", "dest": "/chatbot.js" },
    { "src": "/chat", "dest": "/chat.html" },
    { "src": "/chat.html", "dest": "/chat.html" },
    { "src": "/", "dest": "/index.html" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
